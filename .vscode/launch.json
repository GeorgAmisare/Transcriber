{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Запуск приложения",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Запуск тестов",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "tests"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Сборка релиза",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/build.py",
            "console": "integratedTerminal"
        }
    ]
}
